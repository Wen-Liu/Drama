<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
     shape的類型含有:
     1.rectangle   長方形、矩形
     2.oval   橢圓形、卵形
     3.line   線
     4.ring   環形
     -->

    <solid android:color="@color/White" />

    <size
        android:width="40dp"
        android:height="20dp"></size>

    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners android:radius="10dp" />

    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
        android:width="1dp"
        android:color="#9E9E9E" />

